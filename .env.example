# Database
DATABASE_URL="postgresql://username:password@localhost:5432/location_auth?schema=public"

# JWT Secret (generate a secure random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Allowed Location (latitude and longitude)
# These are default coordinates - users can set their own during signup
DEFAULT_ALLOWED_LATITUDE=37.7749
DEFAULT_ALLOWED_LONGITUDE=-122.4194

# Allowed radius in meters (how far user can be from allowed location)
ALLOWED_RADIUS=100

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"
